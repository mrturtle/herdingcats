<h1>Russell Dougherty Students</h1>

<% @students_by_grade.sort.each do |grade, students| %>
  <h2><%= SchoolClass.find(grade).name %></h2>

  <table>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Primary household</th>
      <th>Secondary household</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% for student in students %>
  <tr>
    <td><%= student.lastname %></td>
    <td><%= student.firstname %></td>
    <td><%= student.primary_household.adults unless student.primary_household.nil? %></td>
    <td><%= student.secondary_household.adults unless student.secondary_household.nil? %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

<% end %>

